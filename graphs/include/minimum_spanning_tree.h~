#ifndef __MINIMUM_SPANNING_TREE_
#define __MINIMUM_SPANNING_TREE_

#include <edge.h>
#include <igraph.h>

#include <vector>

namespace Graph
{
  //============================================================================
  class MinimumSpanningTree
  {
  public:
   //--------------------------------------------------------------------------
    typedef std::set<Edge>                               edge_container_t;
    typedef typename edge_container_t::iterator          edge_iterator;
    typedef typename edge_container_t::const_iterator    edge_const_iterator;

  private:
    //--------------------------------------------------------------------------
    int                                 _vertices;
    int                                 _edges;

    std::vector<edge_container_t *>     _adjList;
    
    //--------------------------------------------------------------------------
    MinimumSpanningTree(const MinimumSpanningTree &);
    MinimumSpanningTree & operator=(const MinimumSpanningTree &);

  public:
    //--------------------------------------------------------------------------
    MinimumSpanningTree(int v = 0);

    //--------------------------------------------------------------------------
    ~MinimumSpanningTree();

    //--------------------------------------------------------------------------
    void addEdge(const Edge &e);

    //--------------------------------------------------------------------------
    const edge_container_t & adjacent(int v) const;

    //--------------------------------------------------------------------------
    int vertices() const;

    //--------------------------------------------------------------------------
    int edges() const;

    //--------------------------------------------------------------------------
    void edges(edge_container_t &rEdges);

    //--------------------------------------------------------------------------
    std::string toString();
  };

}

#endif
