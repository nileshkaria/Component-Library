#include <edge.h>

using namespace std;

namespace Graph
{
    //==========================================================================
    //--------------------------------------------------------------------------
    Edge::Edge(int v, int w, double weight) :
        _v      (v),
        _w      (w),
        _weight (weight)
    {}

    //--------------------------------------------------------------------------
    Edge::~Edge()
    {}

    //--------------------------------------------------------------------------
    int Edge::either()
    { 
        return _v;
    }

    //--------------------------------------------------------------------------
    int Edge::other(int v)
    { 
        return v == _v ? _w : _v;
    }

    //--------------------------------------------------------------------------
    bool Edge::operator<(const Edge &lhs, const Edge &rhs) const
    { 
        return (lhs._weight < rhs._weight) ? true : false;
    }

    //--------------------------------------------------------------------------
    std::string Edge::toString()
    { 
    }

}
