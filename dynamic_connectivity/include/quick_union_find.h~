namespace UnionFind
{
  //============================================================================
  class QuickUnionFind
  {
  private:
    //--------------------------------------------------------------------------
    std::vector<int>    _id;
    std::vector<int>    _size;

    //--------------------------------------------------------------------------
    int root(int i);

  public:
    //--------------------------------------------------------------------------
    QuickUnionFind(int n);

    //--------------------------------------------------------------------------
    ~QuickUnionFind();

